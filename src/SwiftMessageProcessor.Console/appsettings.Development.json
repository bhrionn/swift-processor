{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "SwiftMessageProcessor": "Debug"
    }
  },
  "Database": {
    "Provider": "SQLite",
    "ConnectionString": "Data Source=messages.db"
  },
  "Queue": {
    "Provider": "InMemory",
    "Settings": {
      "InputQueue": "input-messages",
      "CompletedQueue": "completed-messages",
      "DeadLetterQueue": "failed-messages"
    }
  },
  "TestMode": {
    "Enabled": true,
    "GenerationInterval": "00:00:10"
  },
  "Communication": {
    "CommunicationDirectory": "./ipc",
    "StatusUpdateIntervalSeconds": 5,
    "CommandTimeoutSeconds": 30
  },
  "Processing": {
    "MaxConcurrentMessages": 10,
    "MessageProcessingTimeoutSeconds": 60,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 5
  }
}