{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SwiftMessageProcessor": "Debug"
    },
    "EnableSensitiveDataLogging": true
  },
  "Database": {
    "Provider": "SQLite",
    "ConnectionString": "Data Source=messages.db"
  },
  "Queue": {
    "Provider": "InMemory",
    "Settings": {
      "InputQueue": "input-messages",
      "CompletedQueue": "completed-messages",
      "DeadLetterQueue": "failed-messages"
    }
  },
  "Communication": {
    "StatusUpdateIntervalSeconds": 5,
    "CommandTimeoutSeconds": 30
  },
  "TestMode": {
    "Enabled": true,
    "GenerationInterval": "00:00:10"
  }
}